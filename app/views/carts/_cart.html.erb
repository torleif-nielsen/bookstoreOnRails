<h2>Your Cart</h2>
<ul>
  <%= render(@cart.cart_items) %>
  <br>
</ul>
<span class="total_line">Total -- <%= number_to_currency(cart.total_price) %></span>
<br>
<br>
<%= button_to "Checkout", new_order_path, method: :get, class:"btn btn-success btn-sm" %>
<br>
<%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Emptying cart, are you sure?' }, class:"btn btn-danger btn-xs" %>
<br>
