<%= simple_form_for @product do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.input :title %>
  </div>
  <div class="field">
    <%= f.input :description %>
  </div>
  <div class="field">
    <%= f.input :price %>
  </div>
  <div class="field">
    <%= f.input :category, collection: ["Books", "Computers", "School Supplies", "Apparel"] %>
  </div>
  <div class="field">
    <%= f.input :image_url %>
  </div>
  <div class="actions">
    <%= f.button :submit, class:"btn btn-success btn-lg" %>
  </div>
<% end %>
